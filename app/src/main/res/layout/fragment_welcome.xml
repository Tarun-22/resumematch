<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/resume_icon"
        android:layout_marginBottom="24dp"
        android:contentDescription="Resume icon" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ResumeMatch!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the perfect match for your job positions"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name (optional)"
        android:minHeight="48dp"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEnterEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter as Employer"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnEnterJobSeeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter as Job Seeker"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#333333"
        android:backgroundTint="#EEEEEE" />

</LinearLayout> 