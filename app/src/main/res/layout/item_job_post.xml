<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:radius="8dp"
    android:layout_marginTop="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textJobDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textResumeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Resumes Scanned"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/buttonViewApplications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Applications"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:textSize="12sp"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonDeleteJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F44336"
                android:textSize="12sp"
                android:padding="8dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
