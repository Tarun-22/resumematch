<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1976D2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="ResumeMatch"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivPostedJobs"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_posted_jobs_blue"
                    android:alpha="0.6"
                    android:contentDescription="Posted Jobs" />

                <TextView
                    android:id="@+id/tvPostedJobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted\nJobs"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivRecentResumes"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_recent_resumes_blue"
                    android:alpha="0.6"
                    android:contentDescription="Recent Resumes" />

                <TextView
                    android:id="@+id/tvRecentResumes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent\nResumes"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivCreateJob"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_create_job_blue"
                    android:alpha="0.6"
                    android:contentDescription="Create Job" />

                <TextView
                    android:id="@+id/tvCreateJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create\nJob"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivScanResume"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_camera_blue"
                    android:alpha="0.6"
                    android:contentDescription="Scan Resume" />

                <TextView
                    android:id="@+id/tvScanResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan\nResume"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/activity_list_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPostedJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posted Jobs (3 active)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:backgroundTint="#1976D2"
                android:drawableStart="@drawable/ic_posted_jobs_blue"
                android:drawablePadding="16dp"
                android:gravity="start|center_vertical" />

            <Button
                android:id="@+id/btnRecentResumes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Resumes (12 scanned)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:backgroundTint="#1976D2"
                android:drawableStart="@drawable/ic_recent_resumes_blue"
                android:drawablePadding="16dp"
                android:gravity="start|center_vertical" />

            <Button
                android:id="@+id/btnCreateJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Job"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:backgroundTint="#1976D2"
                android:drawableStart="@drawable/ic_create_job_blue"
                android:drawablePadding="16dp"
                android:gravity="start|center_vertical" />

            <Button
                android:id="@+id/btnScanResume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan New Resume"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="16dp"
                android:backgroundTint="#1976D2"
                android:drawableStart="@drawable/ic_camera_blue"
                android:drawablePadding="16dp"
                android:gravity="start|center_vertical" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
