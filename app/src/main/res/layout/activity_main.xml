<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center">


        <!-- Posted Jobs -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivPostedJobs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_posted_jobs_blue"
                android:alpha="0.6"
                android:contentDescription="Posted Jobs" />

            <TextView
                android:id="@+id/tvPostedJobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted Jobs"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:textAlignment="center" />
        </LinearLayout>


        <!-- Recent Resumes -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivRecentResumes"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_recent_resumes_blue"
                android:alpha="0.6"
                android:contentDescription="Recent Resumes" />

            <TextView
                android:id="@+id/tvRecentResumes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Resumes"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:textAlignment="center" />
        </LinearLayout>


        <!-- Create Job -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivCreateJob"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_create_job_blue"
                android:alpha="0.6"
                android:contentDescription="Create Job" />

            <TextView
                android:id="@+id/tvCreateJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Job"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:textAlignment="center" />
        </LinearLayout>


        <!-- Scan Resume -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivScanResume"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_camera_blue"
                android:alpha="0.6"
                android:contentDescription="Scan Resume" />

            <TextView
                android:id="@+id/tvScanResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Resume"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>


    <!-- Main Page Sections Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/helpButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="Help"
            android:padding="8dp"
            android:background="@drawable/help_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Progress Bar for Loading -->
    <ProgressBar
        android:id="@+id/progressBar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPostedJobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:text="Posted Jobs (3 active)"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_posted_jobs_blue"
            android:drawablePadding="16dp"
            android:backgroundTint="#1976D2" />

        <Button
            android:id="@+id/btnRecentResumes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:text="Recent Resumes (12 scanned)"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_recent_resumes_blue"
            android:drawablePadding="16dp"
            android:backgroundTint="#1976D2" />

        <Button
            android:id="@+id/btnCreateJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:text="Create New Job"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_create_job_blue"
            android:drawablePadding="16dp"
            android:backgroundTint="#1976D2" />

        <Button
            android:id="@+id/btnScanResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:text="Scan New Resume"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_camera_blue"
            android:drawablePadding="16dp"
            android:backgroundTint="#1976D2" />
    </LinearLayout>

</LinearLayout>
